{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "notecard-beast",
  "version": "0.1.0",
  "identifier": "com.notecard-beast.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "notecard-beast",
        "width": 800,
        "height": 600,
        "visible": false,
        "label": "main",
        "fullscreen": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": "rpm",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}